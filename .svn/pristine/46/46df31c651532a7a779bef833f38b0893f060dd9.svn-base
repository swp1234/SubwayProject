                ServerConnectManager scMgr = new ServerConnectManager();
                JSONObject jsonObj  = JsonWrapper.wrapSubwayTrainInfo(loggedId,carNum);
                scMgr.requestQuery(jsonObj.toString());
                while(scMgr.getQueryResult().equals(""));
